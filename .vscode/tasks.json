{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "waterbear assemble",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/DreamPotato.Watcher/DreamPotato.Watcher.csproj",
                "--",
                "${file}",
                "${fileDirname}/${fileBasenameNoExtension}.vms",
                "--once"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "waterbear",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+)\\((\\d+),(\\d+),(\\d+),(\\d+)\\):\\s+(error|warning):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                }
            }
        },
        {
            "label": "waterbear watch",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/src/DreamPotato.Watcher/DreamPotato.Watcher.csproj",
                "--",
                "${file}",
                "${fileDirname}/${fileBasenameNoExtension}.vms"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "waterbear",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+)\\((\\d+),(\\d+),(\\d+),(\\d+)\\):\\s+(error|warning):\\s+(.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(Watching|\\[\\d+:\\d+:\\d+\\] File changed)",
                    "endsPattern": "^Build (succeeded|failed)"
                }
            },
            "group": "build"
        },
        {
            "type": "dotnet",
            "task": "build DreamPotato.MonoGame.csproj",
            "file": "${workspaceFolder}/src/DreamPotato.MonoGame/DreamPotato.MonoGame.csproj",
            "group": "build",
            "problemMatcher": [],
            "label": "dotnet: build DreamPotato.MonoGame.csproj"
        },
        {
            "type": "dotnet",
            "task": "build DreamPotato.SaveStateDiff.csproj",
            "file": "${workspaceFolder}/src/DreamPotato.SaveStateDiff/DreamPotato.SaveStateDiff.csproj",
            "group": "build",
            "problemMatcher": [],
            "label": "dotnet: build DreamPotato.SaveStateDiff.csproj"
        },
        {
            "label": "npm: compile extension",
            "type": "npm",
            "script": "compile",
            "path": "src/dreampotato-vscode",
            "problemMatcher": "$tsc",
            "group": "build"
        }
    ]
}